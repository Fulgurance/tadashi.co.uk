<header>

    <nav class="MainMenu Item">

        <a href="<%= root_path %>" class="Home Item">
            <img src="/assets/TadashiLogo.png">
        </a>

        <a href="<%= services_path %>" class="Item">
            Services
        </a>

        <a href="<%= contacts_path %>" class="Item">
